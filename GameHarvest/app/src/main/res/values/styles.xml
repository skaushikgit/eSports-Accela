<resources>

    <!-- inherit from the material theme -->
    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <!-- customize the color palette -->
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle.Home_Blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/blue_button_home</item>
    </style>

    <style name="ButtonStyle.Submit_Report">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/button_light_green</item>
    </style>

    <style name="EditTextStyle.Login">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:background">@drawable/circle_edittext</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <style name="EditTextStyle.Register">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:background">@drawable/card_white_bottom_line</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <!-- Button Style -->
    <style name="FontStyle">

    </style>

    <style name="FontStyle.H1">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle.H2">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle.H3">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle.listItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle.menu">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle.menu.normal">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FontStyle.ActionbarTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle.ActionbarTitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle.Description">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SelectorListDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/right_in</item>
        <item name="android:windowExitAnimation">@anim/right_out</item>
    </style>
</resources>
