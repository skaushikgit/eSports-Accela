<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:background="@drawable/report_card"
        android:orientation="vertical">

        <com.accela.esportsman.view.FontTextView
            android:id="@+id/textTagName"
            style="@style/FontStyle.listItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/reportRightLayout"
            android:text="@string/loading"
            android:textColor="@color/black"
            app:fontFace="Monotype - New Clarendon MT Bold.ttf" />

        <LinearLayout
            android:id="@+id/reportRightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <com.accela.esportsman.view.FontTextView
                android:id="@+id/textDate"
                style="@style/FontStyle.listItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/loading"
                android:textColor="@color/black"/>

            <com.accela.esportsman.view.FontTextView
                android:id="@+id/textStatus"
                style="@style/FontStyle.listItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/loading"
                android:textColor="@color/text_red" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>