<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/action_bar_dark_green"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/actionBar" >
        <ImageView
            android:id="@+id/imageBackId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/FontStyle.ActionbarTitle"
            android:text="@string/app_name"
            />
    </LinearLayout>

    <fragment android:name="com.accela.esportsman.activity.SettingsActivity$SettingsFragment"
        android:id="@+id/settingsFragmentId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>





