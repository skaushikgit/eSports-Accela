<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/dateOfKillContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <com.accela.esportsman.view.FontTextView
            style="@style/FontStyle.menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Kill"
            android:textColor="@color/grey"/>

        <com.accela.esportsman.view.FontTextView
            android:id="@+id/dateOfKillId"
            style="@style/FontStyle.menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="September 04, 2015"
            app:fontFace="Monotype - New Clarendon MT Bold.ttf" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <com.accela.esportsman.view.SelectorView
        android:id="@+id/seasonSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/season" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <com.accela.esportsman.view.OptionsView
        android:id="@+id/methodUsedOptionsId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/method_used"
        app:optionsArray="@array/bowHunting_Method_Array"/>
</LinearLayout>